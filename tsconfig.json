{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shConfig": ["./shsite.config.ts"],
      "@shProjects": ["./shsite.projects.ts"],
      "@shFriends": ["./shsite.friends.tsx"],
      "@lib/*": ["./src/lib/*"],
      "@ui/*": ["./src/components/ui/*"],
      "@components/*": ["./src/components/*"],
      "@styles/*": ["./src/styles/*"]
    }
  }
}
